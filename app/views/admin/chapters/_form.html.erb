<%= form_for [:admin, @course, @chapter], html: {id: 'forum-form', class: 'form-horizontal'} do |f| %>
  <%= render("shared/form_errors", :target => @chapter) if @chapter %>

  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :description %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :video_id, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :video_id %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :image, class: 'control-label' %>
    <div class="controls">
      <%= image_tag(@chapter.image_url) if @chapter.image? %>
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
    </div>
  </div>

  <%= f.submit %>
<% end %>
