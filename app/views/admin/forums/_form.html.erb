<%= form_for [:admin, @course, @forum], html: {id: 'forum-form', class: 'form-horizontal'} do |f| %>
  <%= render("shared/form_errors", :target => @forum) if @forum %>

  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :description %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
