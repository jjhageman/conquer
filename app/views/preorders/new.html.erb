<% content_for :head do %>
  <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript">
Stripe.setPublishableKey("<%= STRIPE_PUBLIC_KEY %>");
</script>
<%= javascript_include_tag 'enrollments' %>
<% end %>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span9">
      <h2><%= @course.instructor_name %> <small>teaches</small></h2>
      <h3><%= @course.name %></h3>
      <%= render partial: 'user_courses/course_player', locals: { video_player: '2361189644001'} %>
      <h4>About the Class</h4>
      <%= @course.description %>
      <h4>About <%= @course.instructor_name %></h4>
      <p><%= @course.instructor_description %></p>
    </div>
    <div class="span3">
      <div class="well">
        <h3><del>$49.99</del> <%= number_to_currency @course.price %></h3>
        <p>Special pre-order price</p>
        <%= render "shared/form_errors", :target => @enrollment %>
        <%= render("shared/form_errors", :target => @user) if @user %>
        <a href="#preOrderForm" role="button" class="btn btn-primary" data-toggle="modal">Pre-Order</a>
      </div>
    </div>
  </div>
</div>


<div id="preOrderForm" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="preOrderFormLabel" aria-hidden="true">
  <% if user_signed_in? && @course.has_preordered_student?(current_user) %>
    <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 id="preOrderFormLabel">Pre-Order: <%= @course.name %></h3>
  </div>
  <div class="modal-body">
    <div class="alert alert-success">
      <strong>Again?</strong> You have already pre-ordered this course.
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
<% else %>
    <%= form_for @enrollment, url: preorders_path, remote: true, html: {id: 'enrollment', class: 'form-horizontal'} do |f| %>
    <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 id="preOrderFormLabel">Pre-Order: <%= @course.name %></h3>
  </div>
  <div class="modal-body">
    <fieldset>


      <% unless user_signed_in? %>
        <legend>Account Information <small><%= link_to 'Already a member?', new_user_session_path %></small></legend>
      <%= fields_for :user do |user_fields| %>
        <div class="control-group">
        <%= user_fields.label :email, class: 'control-label' %>
        <div class="controls">
          <%= user_fields.text_field :email, autofocus: true %>
        </div>
      </div>

      <div class="control-group">
        <%= user_fields.label :password, 'Password', class: 'control-label' %>
        <div class="controls">
          <%= user_fields.password_field :password %>
        </div>
      </div>

      <div class="control-group">
        <%= user_fields.label :password_confirmation, class: 'control-label' %>
        <div class="controls">
          <%= user_fields.password_field :password_confirmation %>
        </div>
      </div>
    <% end %>
    <% end %>

      <legend>Payment Information </legend>
      <div id="stripe_error">
        <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
      </div>
      <div class="alert alert-info"><strong>Don't worry.</strong>Your card will not be charged until the course is released.</div>
      <div class="control-group">
        <div class="controls">
          <%= image_tag 'visa.png' %>
          <%= image_tag 'mastercard.png' %>
          <%= image_tag 'discover.png' %>
          <%= image_tag 'american_express.png' %>
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :card_number, "Credit Card Number ", class: 'control-label' %>
        <div class="controls">
          <%= text_field_tag :card_number, nil, name: nil, class: 'span2', data: {stripe: 'number'} %>
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :card_code, "Security Code (CVV)", class: 'control-label' %>
        <div class="controls">
          <%= text_field_tag :card_code, nil, name: nil, class: 'span1', data: {stripe: 'cvc'}%>
          <%= image_tag 'cvv.png', class: 'cvv_icon' %>
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :card_month, "Card Expiration", class: 'control-label' %>
        <div class="controls">
          <%= select_month nil, {add_month_numbers_true: true}, {name: nil, id: "card_month", class: 'span2', data: {stripe: 'exp-month'}} %>
          <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year", class: 'span2', data: {stripe: 'exp-year'}}%>
        </div>
      </div>

      <%= f.hidden_field :course_id %>
      <%= f.hidden_field :stripe_token %>

    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <%= f.submit "Complete Pre-Order", class: 'btn btn-primary' %>
    </div>
  </fieldset>
<% end %>
  <div id="response" class="hide">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h3 id="preOrderFormLabel">Congratulations!</h3>
    </div>
    <div class="modal-body">
      <p>You're confirmed for <%= @course.instructor_name %>'s class on <%= @course.name %>.</p>
      <p>The class will start <%= @course.start_date %>. We will send you an email when the videos are ready</p>
      <p>Invite your friends so that they can enjoy the special pre-order price too. Send them a link to <@course.promo_url>or share on your social channels.</p>
      <p>F share tweet</p>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
  <% end %>
  </div>
